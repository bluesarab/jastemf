Procedure main() Begin
	Write id(3);
	Write fac(12);
	mr(10);
End;

% Identity
Procedure id(Var n:Integer):Integer Begin
	Return n;
End;

% Faculty
Procedure fac(Var n:Integer):Integer Begin
	If n = 0 Then
		Return 1;
	Fi;
	Return n * fac(n - 1);
End;

% Mutual recursive example function
Procedure mr(Var n:Integer) Begin
	mr1(n, n);
End;

Procedure mr1(Var lb:Integer, Var ub:Integer) Begin
	If lb >= 0 Then
		Write lb;
		mr2(lb - 1, ub);
	Fi;
End;

Procedure mr2(Var lb:Integer, Var ub:Integer) Begin
	Write ub;
	mr1(lb, ub + 1);
End;
