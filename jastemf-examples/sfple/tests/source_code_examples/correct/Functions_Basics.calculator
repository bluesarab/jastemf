Let
	f(N) := N
	
	f1(N) :=
		Let
			f1(N) := 2 * f(N)
		In f1(N + 3)
	f2(N) :=
		Let
			f2(N) := 2 * f(N)
		In f2(N + 3)
	
	fac(N) := If N = 0 Then 1 Else N * fac(N - 1) Fi
	
	mrec(N) :=
		Let -- Mutual recursive example function
			mrinc(I,D) := [I, mrdec(I + 1, D)]
			mrdec(I,D) := If D = 0 Then [0] Else [D, mrinc(I, D - 1)] Fi
		In mrinc(N,N)
In [
	[
	f(-4),
	f(0),
	f(4)
	],
	
	[
	f1(-4),
	f1(0),
	f1(2),
	f1(5)
	],
	
	[
	fac(0),
	fac(1),
	fac(2),
	fac(3),
	fac(5),
	fac(10),
	fac(12),
	fac(fac(3)),
	fac(fac(fac(fac(fac(2)))))
	],
	
	[
	mrec(0),
	mrec(1),
	mrec(2),
	mrec(3),
	mrec(5),
	mrec(10)
	]--,
	
