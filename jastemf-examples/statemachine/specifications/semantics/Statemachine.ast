  StateMachine ::= declarations:Declaration* machineVariables:StateMachineVariable*;
  
  abstract Declaration;
  
  StateMachineVariable ::=
  	  <name:String> 
  	  <type:String> 
  ;
  

  State : Declaration ::= <label:String>  [entry:Action];
  
  Transition : Declaration ::=
    <label:String> 
    <sourceLabel:String> 
    <targetLabel:String>
    <guardLabel:String>
    <actionLabel:String> ;
  
  Action ::= 
  	<actionLabel:String> ;  
  